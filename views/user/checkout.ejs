                                    for (var field in validationRules) {
                                        var rule = validationRules[field];
                                        var value = document.getElementById(field).value.trim();
                                        var errorId = field + 'Err';

                                        switch (rule) {
                                            case 'required':
                                                if (!value) {
                                                    document.getElementById(errorId).innerText = 'Please fill the field.';
                                                    hasErrors = true;
                                                }
