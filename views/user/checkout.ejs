                                                        // total.innerHTML = totalVal - walletBalance

                                                        walletBal.innerHTML = moneyRequired
                                                        total.innerHTML -= moneyRequired

                                                        // } 
                                                        if (total.innerHTML == 0) {
                                                            console.log('walletBalance >= totalVal');
                                                            walletBal.innerHTML = totalVal
