    <script>

        function returnProduct(id) {
            console.log('Inside returnProduct');
            const returnReason = document.getElementById('returnReason').value;
            const returnErr = document.getElementById('returnErr');

            if (returnReason.trim() == '') {
                console.log('Inside if');
                returnErr.innerHTML = 'Enter a reason before proceeding';
                return;
            }


            const orderId = id
            Swal.fire({
                title: 'Return Products?',
                text: 'Do you want to return this Products?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Yes, Return!',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.value) {


                    const requestData = {
                        id: orderId,
                        returnReason: returnReason
                    };

                    fetch('/return-order', {
                        method: 'PATCH',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(requestData)
                    }).then(response => response.json())
                        .then(data => {
                            window.location.reload();
                        })
                        .catch(error => {
                            console.log('Error returning order:', error);
                        });

                } else {
                    Swal.fire('Not returned', 'Your order was not Returned.', 'info');
                }
            });
        }
        $('#exampleModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget) // Button that triggered the modal
