    <style>
        .li-blog-archive {
            list-style-type: none; /* Remove default list styles */
            padding: 0; /* Remove default padding */
        }
    
        .li-blog-archive-item {
            border-radius: 5px;
            margin-bottom: 10px;
            padding: 10px 10px 10px 5px; /* Adjusted padding (top right bottom left) */
            background-color: #f0f0f0;
            text-align: left; /* Align text to the left */
            transition: background-color 0.3s; /* Add a smooth transition for background color */
            display: flex;
            align-items: center;
            justify-content: flex-start; /* Align content to the left */
            cursor: pointer; /* Change cursor to pointer */
            
        }
    
        .li-blog-archive-item.selected {
            background-color: black;
            color: white; /* Change background color to black and text color to white when selected */
        }
    
        .li-blog-archive-item i {
            color: #333; /* Set the default color of the icon *//* Add spacing between icon and text */
            transition: color 0.3s; /* Add a smooth transition for icon color */
            margin-left: 40px;
        }

    
        .li-blog-archive-item.selected i {
            color: white !important; /* Change the color of the icon when selected */
        }
    
        .li-blog-archive-item a {
            padding-left: 20px;
            font-size: 16px;
            text-decoration: none;
            color: #333;
            transition: color 0.3s; /* Add a smooth transition for text color */
        }
    
        .li-blog-archive-item.selected a {
            color: white !important; /* Change text color to white when selected */
        }
    </style>
    
    
    
    
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const items = document.querySelectorAll('.li-blog-archive-item');
    
            items.forEach(item => {
                const link = item.querySelector('a');
                const href = link.getAttribute('href');
                if (href && window.location.href.includes(href)) {
                    item.classList.add('selected');
                }
    
                item.addEventListener('click', function () {
                    window.location.href = link.getAttribute('href');
                });
            });
        });
    </script>
    



    
