<%- include('header.ejs') %>
    <!-- Begin Li's Breadcrumb Area -->
    <div class="breadcrumb-area">
        <div class="container">
            <div class="breadcrumb-content">
                <ul>
                    <li><a href="index.html">Home</a></li>
                    <li class="active">Sign Up</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Li's Breadcrumb Area End Here -->
    <!-- Begin Login Content Area -->
    <!-- jersey man user registration -->
    <div class="page-section mb-60">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
                    <form action="/register" method="post" id="register-form">
                        <div class="login-form">
                            <h4 class="login-title">Sign Up</h4>
                            <div class="row">
                                <div class="col-md-6 col-12 mb-20">
                                    <label>First Name *</label>
                                    <input class="mb-0" type="text" placeholder="Enter Your First Name"
                                        name="firstname" id="first-name">
                                </div>
                                <div class="col-md-6 col-12 mb-20">
                                    <label>Last Name *</label>
                                    <input class="mb-0" type="text" placeholder="Enter Your Last Name" name="lastname" id="last-name">
                                </div>
                                <div class="col-md-12 mb-20">
                                    <label>Email Address*</label>
                                    <input class="mb-0" type="email" placeholder="Enter Your Email Address"
                                        name="email" id="address">
                                </div>
                                <div class="col-md-12 mb-20">
                                    <label>Phone Number *</label>
                                    <input class="mb-0" type="number" placeholder="Enter Your Phone Number"
                                        name="phoneno" id="phoneno">
                                </div>
                                <div class="col-md-6 mb-20">
                                    <label>Password *</label>
                                    <input class="mb-0" type="password" placeholder="Enter Your Password"
                                        name="password" id="password">
                                </div>
                                <div class="col-md-6 mb-20">
                                    <label>Confirm Password *</label>
                                    <input class="mb-0" type="password" placeholder="Confirm Your Password"
                                        name="cpassword" id="cpassword">
                                </div>
                                <div class="d-flex justify-content-center col-12 mb-20">
                                    <li class="text-center text-danger"><%= message %></li>
                                    <li id="message" class="text-center text-danger"></li>
                              
                                </div>
                                <div class="col-md-12 mt-10 mb-20 text-dark font-weight-bold text-left text-md-right">
                                    <a href="/login">already have an account? logIn</a>
                            </div>

                                <div class="col-12 d-flex justify-content-center">
                                    <button class="register-button mt-0" type="submit" onclick="return validateForm()">Sign Up</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
    function validateForm() {
        var firstName = document.getElementById('first-name').value.trim();
        var lastName = document.getElementById('last-name').value.trim();
        var email = document.getElementById('address').value.trim();
        var phoneNumber = document.getElementById('phoneno').value.trim();
        var password = document.getElementById('password').value.trim();
        var confirmPassword = document.getElementById('cpassword').value.trim();
        var message = document.getElementById('message');

        if (!areAllFieldsFilled(firstName, lastName, email, phoneNumber, password, confirmPassword)) {
            setMessage('Please fill in all fields.');
            return false;
        }

        // Validate email format
        if (!isValidEmail(email)) {
            setMessage('Invalid email address.');
            return false;
        }

        // Validate phone number (must be 10 digits)
        if (!isValidPhoneNumber(phoneNumber)) {
            setMessage('Invalid phone number (must be 10 digits).');
            return false;
        }

        // Validate password and confirm password match
        if (password !== confirmPassword) {
            setMessage('Password and Confirm Password must match.');
            return false;
        }

        // Clear any previous error messages
        setMessage('');

        // If all validations pass, the form will be submitted
        return true;
    }

    // Function to set the error message
    function setMessage(text) {
        document.getElementById('message').innerText = text;
    }

    // Function to check if all fields are filled
    function areAllFieldsFilled(firstName, lastName, email, phoneNumber, password, confirmPassword) {
        return firstName !== '' && lastName !== '' &&
            email !== '' && phoneNumber !== '' &&
            password !== '' && confirmPassword !== '';
    }

    // Function to validate email using regex
    function isValidEmail(email) {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return emailRegex.test(email);
    }

    // Function to validate phone number (must be 10 digits)
    function isValidPhoneNumber(phoneNumber) {
        const phoneRegex = /^\d{10}$/;
        return phoneRegex.test(phoneNumber);
    }

    </script>
    <!-- Login Content Area End Here -->
