        <script>
            function validateForm() {
                var productName = document.getElementById('product_name').value.trim();
                var categoryId = document.querySelector('select[name="categoryId"]').value;
                var leagueId = document.querySelector('select[name="leagueId"]').value;
                var teamId = document.querySelector('select[name="teamId"]').value;
                var brandId = document.querySelector('select[name="brandId"]').value;
                var productDesc = document.querySelector('textarea[name="productDesc"]').value.trim();
                var smallQty = document.querySelector('input[name="smallQty"]').value.trim();
                var mediumQty = document.querySelector('input[name="mediumQty"]').value.trim();
                var largeQty = document.querySelector('input[name="largeQty"]').value.trim();
                var salePrice = document.querySelector('input[name="salePrice"]').value.trim();
                var regularPrice = document.querySelector('input[name="regularPrice"]').value.trim();
                // var images = document.querySelector('input[name="images"]').value;
                var errorMessage = document.getElementById('errMessage');
                if (
                    productName === '' ||
                    categoryId === '' ||
                    leagueId === '' ||
                    teamId === '' ||
                    brandId === '' ||
                    productDesc === '' ||
                    smallQty === '' ||
                    mediumQty === '' ||
                    largeQty === '' ||
                    salePrice === '' ||
                    regularPrice === '' ||
                    // images === ''
                ) {
                    alert('All fields must be filled');
                    return false;
                }

                if (parseInt(salePrice) >= parseInt(regularPrice)) {
                    alert('Sale price must be less than regular price');
                    return false;
                }

                return true;
            }
        </script>


