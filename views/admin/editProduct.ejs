            <section class="content-main">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h4>Edit Product</h4>
                            </div>
                            <div class="card-body">
                           


                                <form action="/admin/edit-product?_id=<%=proData._id%>" method="post"
                                    enctype="multipart/form-data" onsubmit="return validateForm()">

                                    <h4 class=" text-danger text-center" for="errMessage">
                                        <%= errMessage %>
                                    </h4>
                                    <h4 class=" text-success text-center" for="sccMessage">
                                        <%= sccMessage %>
                                    </h4>
                                    <h4 class=" text-success text-center" id="errMessage"></h4>
                                    <div class="mb-4">
                                        <label for="product_name" class="form-label">Product Name</label>
                                        <input type="text" class="form-control" id="product_name" name="productName"
                                            value="<%=proData.name%>">
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Category</label>
                                        <input type="text" class="form-control" id="product_name" 
                                            value="<%=proData.category.name%>" readonly>
                                        <select class="form-select" name="categoryId" id="current-categoryname">
                                            <% for(let i=0; i < catData.length; i++) { %>
                                                <option value="<%= catData[i]._id %>" id="categoryname"
                                                    <%=catData[i]._id.toString()===proData.category._id.toString()
                                                    ? 'selected' : '' %>
                                                    >
                                                    <%= catData[i].name %>
                                                </option>
                                                <% } %>
                                        </select>
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">League</label>
                                        <input type="text" class="form-control" id="product_name" 
                                            value="<%=proData.league.name%>" readonly>
                                        <select class="form-select" name="leagueId">
                                            <%for(let i=0;i<leagueData.length;i++){%>
                                                <option value="<%= leagueData[i]._id %>" 
                                                    <%=leagueData[i]._id.toString()===proData.league._id.toString()
                                                    ? 'selected' : '' %>
                                                    >
                                                    <%= leagueData[i].name %>
                                                </option>
                                                <%}%>

                                        </select>
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Team</label>
                                        <input type="text" class="form-control" id="product_name" 
                                            value="<%=proData.team.name%>" readonly>
                                        <select class="form-select" name="teamId">
                                            <%for(let i=0;i<teamData.length;i++){%>
                                                <option value="<%= teamData[i]._id %>"
                                                    <%=teamData[i]._id.toString()===proData.team._id.toString()
                                                    ? 'selected' : '' %>
                                                    >
                                                    <%= teamData[i].name %>
                                                </option>
                                                <%}%>

                                        </select>
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Brand</label>
                                        <input type="text" class="form-control" id="product_name" 
                                            value="<%=proData.brand.name%>" readonly>
                                        <select class="form-select" name="brandId">
                                            <%for(let i=0;i<brandData.length;i++){%>
                                                <option value="<%= brandData[i]._id %>"
                                                    <%=brandData[i]._id.toString()===proData.brand._id.toString()
                                                    ? 'selected' : '' %>
                                                    >
                                                    <%= brandData[i].name %>
                                                  
                                                      
                                                </option>
                                                <%}%>

                                        </select>
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Product description</label>
                                        <textarea placeholder="Type here" class="form-control" rows="4"
                                            name="productDesc"><%=proData.description%></textarea>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <label class="form-label">size wise stock</label>
                                            <div class="mb-4">
                                                <label class="form-label">Small Quantity</label>
                                                <div class="row gx-2">
                                                    <input placeholder="enter stock of small" type="number"
                                                        class="form-control" name="smallQty"
                                                        value="<%=proData.size.s.quantity %>">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4">

                                            <div class="mb-4">
                                                <label class="form-label">Medium Quantity</label>
                                                <div class="row gx-2">
                                                    <input placeholder="enter stock of medium" type="number"
                                                        class="form-control" name="mediumQty"
                                                        value="<%=proData.size.m.quantity %>">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4">

                                            <div class="mb-4">
                                                <label class="form-label">Large Quantity</label>
                                                <div class="row gx-2">
                                                    <input placeholder="enter stock of large" type="number"
                                                        class="form-control" name="largeQty"
                                                        value="<%=proData.size.l.quantity %>">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <label class="form-label">Price</label>
                                    <div class="row">
                                        <div class="col-lg-6">

                                            <div class="mb-4">
                                                <label for="product_name" class="form-label">Sale Price</label>
                                                <input type="text" placeholder="Enter the Sale Price"
                                                    class="form-control" id="product_name" name="salePrice"
                                                    value="<%=proData.price.salePrice %>">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="mb-4">
                                                <label for="product_name" class="form-label">Regular Price</label>
                                                <input type="text" placeholder="Enter the Regular Price"
                                                    class="form-control" id="product_name" name="regularPrice"
                                                    value="<%=proData.price.regularPrice %>">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <label class="form-label">Existing Images</label>


                                            <%proData.imagesUrl.forEach((imagesUrl,index)=>{%>
                                                <div class="existing-image-container mb-2">
                                                    <img src="/admin-assets/uploads/<%=imagesUrl %>" class="img-fluid"
                                                        alt="Existing Image 1">
                                                    <input id="image<%= index %>" type="text" value="<%= imagesUrl %>" hidden>
                                                    <button type="button" class="btn btn-primary"
                                                        onclick="deleteImage('<%= index %>')">Delete</button>
                                                </div>
                                                <%})%>
                                                    <input type="text" id="productid" value="<%= proData._id %>" hidden>
                                                   


                                        </div>
                                    </div>

                                    <div class="card mb-4">
                                        <div class="card-header">
                                            <h4>Media</h4>
                                        </div>
                                        <div class="card-body">
                                            <div class="input-upload">
                                                <img src="/admin-assets/imgs/theme/upload.svg" alt="">
                                                <input class="form-control" type="file" multiple name="newimages"
                                                    accept="image/*">

                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary">
                                        Save Changes
                                    </button>
                                </form>


                            </div>
                        </div> <!-- card end// -->

                    </div>

                </div>
            </section>
            <script>
                async function hello(index) {
                    try {
                        const image = document.getElementById(`image${index}`).value
                        const id = document.getElementById('productid').value
                        const img_index=index


                        const response = await fetch(`/admin/edit-product?pr_id=${id}&img_index=${img_index}`, {
                            method: "DELETE",
                            headers: {
                                "Content-Type": "application/json",
                            },
                        });
                        if (response.ok) {
                            const result = await response.json();
                            console.log("Success:", result);
                            window.location.reload();
                        } else {
                            console.error("Error:", response.statusText);
                        }
                    } catch (error) {
                        console.error("Error:", error);
                    }
                }







                function deleteImage(index) {

                    Swal.fire({
                        title: 'Delete This Image?',
                        text: 'Do you want to Delete this Image?',
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonText: 'Yes, Delete!',
                        cancelButtonText: 'No, cancel'
                    }).then((result) => {
                        if (result.value) {
                            hello(index)

                        } else {
                            Swal.fire('Cancelled', 'Your Image was not Deleted.', 'info');
                        }
                    });



                }
            </script>
