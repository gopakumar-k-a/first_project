            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title">Products List</h2>
                    </div>
                    
                </div>
                <div class="card mb-4">
                   <!-- card-header end// -->
                    <table class="table">
                        <thead>
                            <tr>
                                <!-- <th scope="col" class="col-check">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox">
                                    </div>
                                </th> -->

                                <th scope="col" class="col-name">Name</th>
                                <th scope="col" class="col-price">Price</th>
                                <!-- Add more headers as needed -->
                                <th scope="col" class="col-date"></th>
                                <th scope="col" class="col-action text-end"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let i=0; i < proData.length; i++) { %>
                                <tr>
                                    <!-- <td class="col-check">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox">
                                        </div>
                                    </td> -->
                                    <td class="col-name">
                                        <a class="itemside" href="#">
                                            <div class="left">
                                         
                                                    <img src="/admin-assets/uploads/<%= proData[i].imagesUrl[0] %>"
                                                        class="img-sm img-thumbnail" alt="Item">
                                            </div>
                                            <div class="info">
                                                <h6 class="mb-0"
                                                    style="max-width: 66ch; overflow: hidden; text-overflow: ellipsis;"
                                                    title="<%= proData[i].name %>">
                                                    <%= proData[i].name %>
                                                </h6>
                                            </div>
                                        </a>
                                    </td>

                                    <td class="col-price">
                                        <span>
                                            <%= proData[i].price.salePrice %>
                                        </span>
                                    </td>
                                    <td>
                                        <% if (proData[i].isActive==true) { %>
                                            <div class="col-lg-2 col-sm-2 col-4 col-status">
                                                <span class="badge rounded-pill alert-success">
                                                    Active</span>
                                            </div>
                                            <% } else { %>
                                                <div class="col-lg-2 col-sm-2 col-4 col-status">
                                                    <span class="badge rounded-pill alert-danger">Disabled</span>
                                                </div>
                                                <% } %>
                                    </td>
                                    <td>
                                        <% if (proData[i].isActive===true) { %>
                                            <a href="#" onclick="confirmBlock('<%= proData[i]._id %>')">
                                                <button class="btn btn-sm btn-danger rounded font-sm">Block</button>
                                            </a>
                                            <% } else { %>
                                                <a href="#" onclick="confirmUnblock('<%= proData[i]._id %>')">
                                                    <button
                                                        class="btn btn-sm btn-success rounded font-sm ml-2">Unblock</button>
                                                </a>
                                                <% } %>
                                    </td>
                                    <td class="col-action text-end">
                                        <a href="/admin/edit-product?_id=<%=proData[i]._id %>"
                                            class="btn btn-sm font-sm rounded btn-brand">
                                            <i class="material-icons md-edit"></i> Edit
                                        </a>
                                        <!-- <a href="#" class="btn btn-sm font-sm btn-light rounded">
                                            <i class="material-icons md-delete_forever"></i> Delete
                                        </a> -->
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                    <div class="pagination-area mt-30 mb-50">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-start">
                                <%if(currentPage>1){%>
                                    <li class="page-item"><a class="page-link" href="/admin/product-list?page=<%= parseInt(currentPage) - 1 %>"
                                        ><i class="material-icons md-chevron_left"></i></a></li>
                                    <%}%>
                              
                                    <% for (let i=1; i <=pageCount; i++) { %>

                                        <li
                                            class=" <%= i == currentPage ? 'page-item active' : 'page-item ' %>">
                                            <a class="page-link" href="<%= `/admin/product-list?page=${i}` %>">
                                                <%= i %>
                                            </a>
                                        </li>
                                    
                                        <% } %>

                                      

                                        <%if(currentPage < pageCount){%>
                                            <li class="page-item"><a class="page-link" href="/admin/product-list?page=<%= parseInt(currentPage) + 1 %>"
                                                ><i class="material-icons md-chevron_right"></i></a></li>
                                            <%}%>


                            </ul>
                        </nav>
                    </div>

            </section>
            <script>
                function confirmBlock(productId) {
                                Swal.fire({
                                    title: 'Are you sure?',
                                    text: 'You are about to block this Product.',
                                    icon: 'warning',
                                    showCancelButton: true,
                                    confirmButtonColor: '#d33',
                                    cancelButtonColor: '#3085d6',
                                    confirmButtonText: 'Yes, block it!'
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        const status='block'
                                        window.location.href = "/admin/block-product?_id=" + productId+"&status="+status;
                                    }
                                });
                            }

                            function confirmUnblock(productId) {
                                Swal.fire({
                                    title: 'Are you sure?',
                                    text: 'You are about to unblock this Product',
                                    icon: 'warning',
                                    showCancelButton: true,
                                    confirmButtonColor: '#28a745',
                                    cancelButtonColor: '#3085d6',
                                    confirmButtonText: 'Yes, unblock it!'
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        const status='unblock'
                                        window.location.href = "/admin/block-product?_id=" + productId+"&status="+status;
                                    }
                                });
                            }
            </script> <!-- content-main end// -->
